package com.yc.core.cqrs.domain.command;

import java.util.UUID;

import com.fasterxml.jackson.databind.JsonNode;

public class Command {

    protected final UUID aggregateId;
    protected final JsonNode data;
    protected final JsonNode model;

    public Command(JsonNode aggregate, JsonNode model) {
		this.aggregateId = UUID.fromString(aggregate.asText("id"));
		this.model = model;
		this.data = aggregate.get("data");
	}
    
    final public String getAggregateType() {
    	return this.data.asText("type");
    }

    final public UUID getAggregateId() {
		return aggregateId;
	}
    
    final public JsonNode getData() {
		return data;
	}
    
    final public JsonNode getModel() {
    	return this.model;
    }
}
