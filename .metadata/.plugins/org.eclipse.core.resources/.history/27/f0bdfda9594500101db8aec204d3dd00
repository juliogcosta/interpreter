package com.yc.core.cqrs.domain.command;

import java.util.UUID;

import org.json.JSONObject;

public class Command {

    protected final UUID aggregateId;
    protected final JSONObject subDataSet;

    public Command(JSONObject subDataSet) {
		this.aggregateId = UUID.fromString(subDataSet.getJSONObject("data").getString("id"));
		this.subDataSet = subDataSet.getJSONObject("data");
	}
    
    final public String getAggregateType() {
    	return this.subDataSet.getString("type");
    }

    public UUID getAggregateId() {
		return aggregateId;
	}
    
    public JSONObject getSubDataSet() {
		return subDataSet;
	}
}
